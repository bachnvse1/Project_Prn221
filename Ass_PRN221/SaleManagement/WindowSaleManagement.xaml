<Window x:Class="SaleManagement.WindowSaleManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaleManagement"
        mc:Ignorable="d"
        Title="Login" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Username:" Margin="10" VerticalAlignment="Center"/>
        <TextBox x:Name="txtUsername" Grid.Row="0" Margin="100,10,10,10" Height="30" />

        <TextBlock Grid.Row="1" Text="Password:" Margin="10" VerticalAlignment="Center"/>
        <PasswordBox x:Name="txtPassword" Grid.Row="1" Margin="100,10,10,10" Height="30" />

        <Button Grid.Row="2" Content="Login" Width="100" Height="30" Margin="10,10,10,10"
                HorizontalAlignment="Center" Click="Login_Click"/>

        <TextBlock x:Name="lblError" Grid.Row="3" Foreground="Red" Text="" HorizontalAlignment="Center" />
    </Grid>
</Window>
